<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "uk.co.piandmash.pokemonjourney"
        versionCode="10"
        version   = "1.0.0">

    <!-- versionCode is optional and Android only -->
    <preference name="phonegap-version" value="2.7.0" />
    <gap:splash src="splash.png" />
    <preference name="splash-screen-duration" value="5000" />
    <icon src="icon.png" />
    <name>Pokemon Journey</name>

    <description>
        Take a Pokemon Journey in the real world!
    </description>

    <author href="http://www.piandmash.co.uk" email="pete.cleary@gmail.com">
        Pete Cleary
    </author>

</widget>
